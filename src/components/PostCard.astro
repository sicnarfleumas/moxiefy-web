---
// Import Utility
import { Image } from "astro:assets";


const { post} = Astro.props;

const { title, image, description, url } = post.frontmatter;
---
<div class="post-card">

  <div class="left">
    
    <h1 transition:name="blog_title"> <a href={post.url}>  {title} </a> </h1>

    <p>{description}...<span><a href={post.url}>Read more</a></span></p>
  </div>
  
  <div class="right">

    <a href={post.url}>
      <Image
      class="post-image" 
      src={image.src} 
      alt={image.alt}
      width={image.width}
      height={image.height}      
      
      transition:name="blog-image"
      />
      
  </div>

</div>

<style>
  .post-card {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .left {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .left > h1 {
    font-family: ;
    font-size: 1.5rem;

    color: #B6E851;

    width: 40ch;

    line-height: 1.25;
  }

  .left > p {
    font-family: ;
    font-size: 1.2rem;

    color: #6D549E;

    width: 40ch;
  }

  p > span {
    text-decoration: underline;
  }

  .post-image {
    width: 100%;
    height: 15rem;
  }

  a:visited{
    text-decoration: none;
    color: inherit;
  }
</style>

