---
// Import utility
import { Image } from 'astro:assets';
// Impot Images
import facebook from "../assets/images/social-icons/facebook.png"
import instagram from "../assets/images/social-icons/instagram.png"
import linkedin from "../assets/images/social-icons/linkedin.png"
---

<div class="Nav-Container">
<nav id="Nav">
    <a class="logo" href="/"><h6>moxie<span>fy</span></h6></a>
        <ul>
            <li><a href="/#About">About</a></li>
            <li><a href="/#Services">Services</a></li>
            <li><a href="/#Portfolio">Portfolio</a></li>
            <li><a href="/#Blog">Blog</a></li>
            <li><a href="/#Contact">Contact</a></li>
        </ul>
        
        <div class="socials">
            <a href="https://www.facebook.com/people/Moxiefy/61550828314507/" target="_blank">
                <Image class="icons" src={facebook} alt="Facebook logo" />
            </a>
            <a href="https://www.instagram.com/moxiefy.co/" target="_blank">
                <Image class="icons" src={instagram} alt="Instagram logo" />
            </a>
            <a href="https://www.linkedin.com/company/moxiefydigital" target="_blank">
                <Image class="icons" src={linkedin} alt="LinkedIn logo" />
            </a>

        </div>
           
        
</nav>
</div>

<style>
@font-face {
  font-family: 'Architype Bayer-type W90';
  src: url('/fonts/Architype Bayer-type W90.woff') format('woff');
}

.Nav-Container {
    background-color: #6010A9;
    padding-top: 2rem;
    padding-bottom: 2rem;
}
nav {
    align-items: center;
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-direction: row;
    background-color: white;
}

h6 {
    font-family: 'Architype Bayer-type W90', sans-serif;
    font-size: 32.5px;
    font-weight: 500;
    color: #6D549E;
}

ul {
    display: flex;
    gap: 3rem;
    padding: 2.5rem 2.5rem;
}

li {
    display: inline-block;
    list-style: none;
    font-size: 22.6px;
    font-family: 'Barlow Condensed', sans-serif;
    text-transform: uppercase;
    color: #6D549E;
}

a:hover {
    border-bottom: solid .2rem #B6E851;
    color: #9B84B2;
}
.socials {
    display: flex;
    gap: 0.75rem;
}

.icons {
    height: 2rem;
    width: auto;
}


h6 > span {
  text-decoration: none;
  color: #B6E851;
}

a {
    text-decoration: none;
    color: #6D549E;
}

@media screen and (max-width: 576px) {
        
    nav {
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 15% 5%;
    }

    ul {
       display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 1rem;
    }

    li {
        padding: 1.5rem 0;
        font-size: 1.25rem;
    }

    .socials {
        padding: 1rem 0;
    }

    .icons {
        height: 1.5rem;
    }

    h6 {
        font-size: 2rem;
    }

    

    .logo {
        padding-bottom: 1rem;
    }
  }

 

  @media screen and (min-width: 577px) and (max-width: 1024px) {
  }

</style>