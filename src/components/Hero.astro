---


// Import Utilities
import { Image } from 'astro:assets';

// Import Images
import butterfly from '../assets/images/hero/butterfly.png'

// Import Components
import CTA from './buttons/HeroButton.astro';
---

<div class="Hero">

  <div class="left">
    <strong>Bold ideas <br>need <br>fearless <br>execution.</strong>
    
    <CTA cta = "CONNECT"/>

    <b class="sub">Creative <br>Marketing <br>Solutions for <br>the Bold New <br>World.</b>
  </div>

    <div class="mid">
      <Image 
        src={butterfly} 
        alt="Glossy butterfly"
        class="butterfly"
    />
    </div>

    <div class="right">
      <b class="bottom">Creative <br>Marketing <br>Solutions for <br>the Bold New <br>World.</b>
    </div>
    
</div>

<style>

  @font-face {
    font-family: 'TAN - Angleton Regular';
    src: url('/fonts/TAN - Angleton Regular.ttf') format('TrueType');
  }

  .sub {
    display: none;
  }

  .Hero {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    height: fit-content;
    padding-top: 2%;

    background-image: 
    linear-gradient(to bottom, #6010A9 0%, #6312AA 74% 125%, #6312AA 104% 107%);

  }

  .left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 2rem;
  }

  strong {
        font-family: 'TAN - Angleton Regular', sans-serif;
        font-size: 3.6rem;
        text-transform: uppercase;
        color: #B6E851;
        line-height: 130%;
        

    }
    
    .mid {
      display: flex;
      flex-direction: column;
      align-items: top;
      justify-content: flex-start;
      margin-left: -15%;

    }
    
    .right {
      display: flex;
      flex-direction: column;
      margin-left: -15rem;
      margin-top: 19rem;
    }

    b {

        font-family: 'Barlow', sans-serif;
        font-size: 1.75rem;
        font-weight: 400;
        color: white;

        line-height: 1.2;
    }

    .butterfly {
      width: 100%;
      height: auto;
    }

    @media screen and (max-width: 576px) {

      .Hero {
        display: flex;
        flex-direction: column-reverse;
        justify-content: center;
        align-items: center;
        height: fit-content;
        padding: 10% 0%;
      }
      .left {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
      }
      .right {
        display: none;
      }

      br {
        display: none;
      }
      strong {
        font-size: 1.5rem;
        text-align: center;
        line-height: 2;
      }

      .sub {
        display: block;
        font-size: 1.5rem;
        text-align: center;
        line-height: 2;
        width: 25ch;
      }

    }

 

  @media screen and (min-width: 577px) and (max-width: 1024px) {
  }
</style>