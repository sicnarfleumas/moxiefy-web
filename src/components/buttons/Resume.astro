<style>
    
    .button {
        height: fit-content;
        width: fit-content;
        position: relative;
        background-color: transparent;
        cursor: pointer;
        border: 2px solid #B6E851;
        overflow: hidden;
        color: #B6E851;
        transition: all 0.5s ease-in-out;
        padding: 1rem 1rem;

        
    }

    .btn-txt {
        font-size: 1.5rem;
        font-family: 'Barlow Condensed', sans-serif;
        z-index: 1;
        font-weight: 800;
        letter-spacing: 4px;
        
    }

    .type1::after {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        transition: all 0.5s ease-in-out;
        background-color: #B6E851;
        border-radius: 30px;
        visibility: hidden;
        height: 10px;
        width: 10px;
        z-index: -1;
    }

    .button:hover {
        box-shadow: 1px 1px 200px #B6E851;
        color: #B6E851;
    }

    .type1:hover::after {
        visibility: visible;
        transform: scale(100) translateX(2px);
    }
</style>