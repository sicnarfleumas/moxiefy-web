---

// Import Utilities
import { Image } from 'astro:assets';

// Import Images
import Ads from "../assets/images/portfolio/banner/Portfolio1.png";
import Design from "../assets/images/portfolio/banner/Portfolio3.png";
import Branding from "../assets/images/portfolio/banner/Portfolio2.png";
import Social from "../assets/images/portfolio/banner/Portfolio4.png";

---

<section class="Portfolio" id="Portfolio">
  <div><h1>Portf<span>olio</span></h1></div>
  <div class="img-holder">
      <a href='portfolio/ads'>
        <Image src={Ads} alt="Ads Portfolio">
      </a>
      <a href="portfolio/design">
        <Image src={Design} alt="Design Portfolio" />
      </a>
      <a href="portfolio/brand">
        <Image src={Branding} alt="Branding Portfolio" />
      </a>
      <a href="portfolio/social">
        <Image src={Social} alt="Social Media Portfolio" />
      </a>
  </div>

</section>

<style>

    section {
      background-image: 
    linear-gradient(to bottom, #A758D3 0%, #a75ad3 74% 125%, #A351D2 104% 107%);
    }

    h1 {
  font-family: 'Barlow Condensed', sans-serif;
  font-weight: bold;
  color: white;
  text-transform: uppercase;
  text-align: right;
  font-size: 3.5rem;
  }
    img {
        width: 100%;
        height: 40rem;

        border-radius: 2rem;
    }

    .img-holder {
        display: flex;
        flex-direction: column;

        gap: 2rem;
    }
</style>